<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="WpfApplicationSnow" SizeToContent="WidthAndHeight" Background="Black">
    <Canvas x:Name="LayoutRoot"  Height="300" Width="600">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00202A" Offset="1"></GradientStop>
                <GradientStop Color="#FF000000" Offset="0"></GradientStop>
            </LinearGradientBrush>
        </Canvas.Background>
    </Canvas>
</Window> 
